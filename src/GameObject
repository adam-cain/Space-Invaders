public abstract class GameObject implements Movable{
    protected int x;
    protected int y;
    protected int width;
    protected int height;
    protected Image sprite;

    public GameObject(int x, int y, int width, int height, Image sprite) {
        this.x = x;
        this.y = y;
        this.width = width;
        this.height = height;
        if (sprite != null) {
            this.sprite = sprite;
        }else{
            this.sprite = new Image("src/assets/placeholder.png");
        }
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public int getWidth() {
        return width;
    }

    public int getHeight() {
        return height;
    }

    public void update(GraphicsController gc) {
        gc.drawImage(sprite, x, y);
    }

    public boolean collides(GameObject other) {
        // Check if the right edge of 'this' is left of the left edge of 'other'
        if (this.x + this.width <= other.getX()) {
            return false;
        }
    
        // Check if the left edge of 'this' is right of the right edge of 'other'
        if (this.x >= other.getX() + other.getWidth()) {
            return false;
        }
    
        // Check if the bottom edge of 'this' is above the top edge of 'other'
        if (this.y + this.height <= other.getY()) {
            return false;
        }
    
        // Check if the top edge of 'this' is below the bottom edge of 'other'
        if (this.y >= other.getY() + other.getHeight()) {
            return false;
        }
    
        // If none of the above, the rectangles intersect
        return true;
    }
}